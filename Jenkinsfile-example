pipeline {
    agent any

    tools{
            maven 'local maven'
    }

    stages{

        stage ('Build'){
            steps{
                  sh 'mvn clean package'
            }
            post {
                 success {
                    echo 'start save document'
                    archiveArtifacts artifacts: '**/target/*.war'
                 }
            }
        }

        stage ('build'){
            steps{
                     echo "Code Deployed......"
            }
        }
    }

  
}